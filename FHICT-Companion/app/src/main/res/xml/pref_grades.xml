<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="colour_grades"
        android:summary="Colour all grades according to their value."
        android:title="Colour grades" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_grades_sort_titles"
        android:entryValues="@array/pref_grades_sort_values"
        android:key="grade_sort"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Default sorting method" />

</PreferenceScreen>
