<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingTop="4dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                  android:id="@+id/people_details_profile_image"
                                                  android:layout_width="128dp"
                                                  android:layout_height="128dp"
                                                  android:layout_alignParentTop="true"
                                                  android:layout_centerHorizontal="true"
                                                  app:civ_border_color="#FBFBFB"
                                                  app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/people_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/people_details_profile_image"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="@string/name_placeholder"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ListView
        android:id="@+id/people_details_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/people_details_name"/>

    <ProgressBar
        android:id="@+id/people_details_profile_image_pbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"/>

    <ProgressBar
        android:id="@+id/people_details_extra_info_pbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"/>

</RelativeLayout>