<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="s.pahlplatz.fhict_companion.fragments.ScheduleFragment">

    <Spinner
        android:id="@+id/schedule_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:spinnerMode="dropdown"/>

    <ProgressBar
        android:id="@+id/schedule_pbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_spinner"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/schedule_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_spinner"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/no_data"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/schedule_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_spinner"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

</RelativeLayout>
